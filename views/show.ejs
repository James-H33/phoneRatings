<% include partials/header %>
<link rel="stylesheet" href="/stylesheets/show.css" media="screen" title="no title" charset="utf-8">

<div class="header">
  <h1>Welcome to the show page</h1>
</div>

<div class="contentContainer">
<div class="ui card">
  <div class="content">
    <div class="left floated meta">
      <h3><%= phone.name %></h3>
    </div>
  </div>
  <div class="image">
    <img src="<%= phone.image %>">
  </div>
  <div class="content">
    <span class="right floated">
      <i class="heart outline like icon"></i>
      17 likes
    </span>
    <i class="comment icon"></i>
    <%= phone.description %>
  </div>
  <div class="extra content">
    <div class="ui large transparent left icon input">
      <i class="heart outline icon"></i>
      <input type="text" placeholder="Add Comment...">
    </div>
  </div>
</div>
  <form action="/phones/<%= phone._id %>?_method=DELETE" method="POST">
    <button class="ui secondary button"> Remove Post</button>
  </form>
</div>
<% include partials/footer %>
